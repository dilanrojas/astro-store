---
import Layout from "./Layout.astro";
import AstroHeader from "../components/AstroHeader.astro";
import AstroFooter from '../components/AstroFooter.astro'
const { itemName, itemDesc, itemPrice } = Astro.props;
---

<Layout title="black-t-shirt">

  <AstroHeader />

  <section class="astro-item container">
    <a class="go-back" href="/"><i class="fa-solid fa-chevron-left"></i>Atrás</a>
    <div class="astro-item-wrapper">
      <div class="item-image-wrapper">
        <slot name="item-image" />
      </div>
      <div class="item-info-wrapper">
        <div class="item-info">
          <h1>{itemName}</h1>
          <p>₡ {itemPrice}</p>
        </div>
  
        <div class="item-sizes-wrapper">
          <h1>Tallas disponibles</h1>
  
          <div class="item-sizes-list">
            <p>S</p>
            <p>M</p>
            <p>L</p>
          </div>
        </div>
  
        <div class="item-buy-wrapper">
          <h1>Comprar producto</h1>
  
          <div class="item-buy-links">
            <p>Gestiona tu compra desde nuestro chat en Instagram:</p>
            <a href="#"><i class="fa-brands fa-instagram"></i> AstroStore</a>
          </div>
        </div>
  
      </div>
    </div>
  </section>

  <AstroFooter />
  

</Layout>

<style>
  .astro-item {
    color: var(--clr-neutral-900);
    padding-top: 140px;
    display: flex;
    flex-direction: column;
    gap: 2em;
    padding-bottom: 100px;
  }

  .go-back {
    width: min-content;
    height: min-content;
    padding: 10px 20px;
    border-radius: 20px;
    background-color: var(--clr-accent-100);
    color: var(--clr-accent-500);
    font-weight: var(--fw-medium);
    display: flex;
    align-items: center;
    gap: .5em;
  }

  .astro-item-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2em;
  }
  .astro-item-wrapper h1 {
    font-size: var(--fs-650);
    font-weight: var(--fw-semibold);
  }
  .astro-item-wrapper p {
    font-size: var(--fs-500);
    font-weight: var(--fw-regular);
  }
  @media (max-width: 700px) {
    .astro-item-wrapper {
      grid-template-columns: 1fr;
    }
  }

  .item-image-wrapper {
    display: flex;
    align-items: start;
    justify-content: center;
    background-color: var(--clr-neutral-200);
    border-radius: 10px;
    padding: 50px;
  }

  .item-info-wrapper {
    display: flex;
    flex-direction: column;
    gap: 3em;
  }

