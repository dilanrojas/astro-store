    display: flex;
    flex-direction: column;
    gap: .5em;
  }
  .item-sizes-list {
    display: flex;
    gap: .3em;
  }
  .item-sizes-list p {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--clr-neutral-900);
    font-size: var(--fs-450);
    color: var(--clr-neutral-100);
    border-radius: 20px;
    width: 40px;
    height: 40px;
  }

  .item-buy-wrapper {
    display: flex;
    flex-direction: column;
