---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />

		<script src="https://kit.fontawesome.com/92992ef526.js" crossorigin="anonymous"></script>
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Pacifico&display=swap');
	@import "https://www.nerdfonts.com/assets/css/webfont.css";

	:root {
		--clr-neutral-100: white;
		--clr-neutral-200: rgb(240, 240, 240);
		--clr-neutral-300: rgb(210, 210, 210);
		--clr-neutral-400: rgb(150, 150, 150);
		--clr-neutral-500: rgb(70, 70, 70);
		--clr-neutral-600: rgb(40, 40, 40);
		--clr-neutral-700: rgb(25, 25, 25);
		--clr-neutral-800: rgb(15, 15, 15);
		--clr-neutral-900: black;

		--clr-accent-100: rgb(235, 235, 255);
		--clr-accent-400: rgb(120, 120, 255);
		--clr-accent-500: rgb(80, 80, 255);
		--clr-accent-900: rgb(6, 6, 13);
		--clr-bg-body: var(--clr-neutral-100);

		--fs-100: .25rem;
		--fs-150: .40rem;
		--fs-200: .50rem;
		--fs-250: .75rem;
		--fs-300: .8rem;
		--fs-350: .9rem;
		--fs-400: 1rem;
		--fs-450: 1.125rem;
		--fs-500: 1.25rem;
		--fs-550: 1.4rem;
		--fs-600: 1.6rem;
		--fs-650: 1.7rem;
		--fs-700: 2rem;
		--fs-750: 2.2rem;
		--fs-800: 2.5rem;
		--fs-850: 2.8rem;
		--fs-900: 3rem;
		--fs-950: 3.5rem;

		--fw-regular: 400;
		--fw-medium: 500;
		--fw-semibold: 600;
		--fw-bold: 700;
		--fw-extrabold: 800;

		--ff-body: 'Montserrat', sans-serif;
		--ff-logo: 'Pacifico', cursive;
	}

	html {
		scroll-behavior: smooth;
	}

	* {
		margin: 0;
		padding: 0;
		font-family: var(--ff-body);
	}

	*,
	*::after,
	*::before {
		box-sizing: border-box;
	}

	ul[role="list"],
	ol[role="list"] {
		list-style-type: none;
	}

	a {
		text-decoration: none;
	}

	body {
		color: var(--clr-neutral-100);
		background-color: var(--clr-bg-body);
		font-size: var(--fs-400);
	}

	.astro-image {
		width: 180px;
	}
	@media(max-width: 500px) {
		.astro-image {
			width: 160px;
		}
	}

	/* Utility classes */
	.container {
		--max-width: 1110px;
		--padding: 1rem;

		width: min(var(--max-width), 100% - (var(--padding) * 2));
		margin-inline: auto;
	}

	button {
		background-color: var(--clr-neutral-100);
		color: var(--clr-neutral-900);
		border-radius: 50px;
		border: 0;
		padding: 8px 25px;
		box-shadow: 0px 3px 5px rgba(0, 0, 0, .6);
		font-size: var(--fs-450);
		font-weight: var(--fw-medium);
		transition: all 0.15s ease;
	}

	button:hover {
		background-color: var(--clr-accent-400);
		color: var(--clr-neutral-100);
	}

	hr {
		height: 1px;
		background-color: var(--clr-neutral-500);
		border: 0;
	}

	:where(.flow > * + *) {
		margin-top: var(--flow-spacer, 3em);
	}
</style>
