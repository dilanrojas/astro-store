---
import ShopItem from "./ShopItem.astro";
---

<ShopItem
  itemName="T-Shirt"
  itemDesc="Oversized red t-shirt"
  itemPrice="CRC 8.000,00"
  >
  
  <img
    slot="shop-item-image"
    src="/t-shirt-red.webp" alt="t-shirt"
  />

</ShopItem>

<style>
	img {
		width: 180px;
	}
	@media(max-width: 1000px) {
		img {
			width: 170px;
		}
	}
	@media(max-width: 900px) {
		img {
			width: 150px;
		}
	}
	@media(max-width: 700px) {
		img {
			width: 140px;
		}
	}
</style>